{
  "name": "aezakmi-launcher",
  "version": "1.0.0",
  "description": "AEZAKMI Launcher - Auto-installer for Node.js, Playwright and Chromium",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.aezakmi.launcher",
    "productName": "AEZAKMI Launcher",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AEZAKMI Launcher"
    },
    "files": [
      "main.js",
      "index.html",
      "icon.ico"
    ]
  },
  "dependencies": {
    "axios": "^1.6.0",
    "extract-zip": "^2.0.1",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
